<div id = 'sign_in'>

<%if flash.any?%>
  <%=flash[:notice]%>
<%end%>

<%= form_for :user, url: sessions_path do |f|%>
  
  <%= f.label :Username %>
  <%= f.text_field :username, class: 'form-control'%><br/>
  
  <%= f.label :Password %>
  <%= f.password_field :password, class: 'form-control' %><br/>

  <%= f.submit :Login, class: 'btn btn-default'%>

<%end%>
