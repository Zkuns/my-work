div class='all-form'
  =render 'shared/message'
  -if @user.errors.any?
  #error_explanation
    / .alert.alert-error
    ul
     @user.errors.full_messages.each do |msg|
       li
        = msg
  =form_for @item, url: items_path do |f|
    .form-group
      =f.label '时间'
      =f.text_field :time, class: 'form-control datepicker', value: "#{@item.time}"
    .form-group
      =f.label '渠道号:'
      =f.label @item.internumber
      br
      |c10001
      =f.radio_button :internumber, value: 'c10001', class: 'form-control'
      |c10002
      =f.radio_button :internumber, value: 'c10002',class: 'form-control'
    .form-group
      =f.label '注册用户数'
      =f.text_field :signupnumber, class: 'form-control', value: "#{@item.signupnumber}"
    .form-group
      =f.label '充值用户数'
      =f.text_field :usernumber, class: 'form-control', value: "#{@item.usernumber}"
    .form-group
      =f.label '移动金额'
      =f.text_field :yidong, class: 'form-control', value: "#{@item.yidong}"
    .form-group
      =f.label '联通金额'
      =f.text_field :liantong, class: 'form-control', value: "#{@item.liantong}"
    .form-group
      =f.label '电信金额'
      =f.text_field :dianxing, class: 'form-control', value: "#{@item.dianxing}"
    =f.submit '修改', class:'btn btn-default'