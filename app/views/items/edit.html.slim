div class='all-form'
  =render 'shared/message'
  -if @item.errors.any?
  #error_explanation
    ul
     -@item.errors.full_messages.each do |msg|
       li
        = msg
  =form_for @item, url: company_item_path(@com, @item) do |f|
    .form-group
      =f.label '时间'
      =f.text_field :time, class: 'form-control', id:'select', value: "#{@item.time.strftime("%Y-%m-%d")}"
    .form-group
      =f.label '游戏类型:'
      =f.label @item.coo_game
      =f.select :coo_game, @games, {},class: 'form-control'
    .form-group
      =f.label '注册用户数'
      =f.text_field :signupnumber, class: 'form-control', value: "#{@item.signupnumber}"
    .form-group
      =f.label '充值用户数'
      =f.text_field :usernumber, class: 'form-control', value: "#{@item.usernumber}"
    .form-group
      =f.label '移动金额'
      =f.text_field :yidong, class: 'form-control', value: "#{@item.yidong}"
    .form-group
      =f.label '联通金额'
      =f.text_field :liantong, class: 'form-control', value: "#{@item.liantong}"
    .form-group
      =f.label '电信金额'
      =f.text_field :dianxing, class: 'form-control', value: "#{@item.dianxing}"
    =f.submit '修改', class:'btn btn-default'