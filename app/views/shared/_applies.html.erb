<table>
    <tr><td>姓名</td><td>邮箱</td><td>联系电话</td><td>操作</td></tr>
    <% unless @applies.nil? %>
      <% @applies.each do |apply| %>      
        <tr>
          <td><%= apply.realname %></td>
          <td><%= apply.email %></td>
          <td><%= apply.mobile %></td>
          <td><%= link_to '撤销签到', "/cancel?id=#{apply.id}&activity_id=#{apply.activity_id}", remote: true%></td>
        </tr>
      <% end %>
    <% end %>
  </table>